<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.MainActivity" android:background="#5DB8E2">

    <Button
            android:text="@string/connect_button_text"
            android:layout_width="138dp"
            android:layout_height="61dp"
            android:id="@+id/connectButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="179dp"/>
    <EditText
            android:layout_width="217dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:text="@string/ip_string"
            android:ems="10"
            android:id="@+id/ipText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="46dp"/>
    <EditText
            android:layout_width="217dp"
            android:layout_height="46dp"
            android:inputType="number"
            android:text="@string/port_string"
            android:ems="10"
            android:id="@+id/portText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="112dp"/>
    <SeekBar
            android:layout_width="377dp"
            android:layout_height="41dp"
            android:id="@+id/rudderSeekBar"
            android:max="40"
            tools:layout_editor_absoluteY="744dp"
            tools:layout_editor_absoluteX="-49dp"/>
    <SeekBar
            android:layout_width="278dp"
            android:layout_height="318dp"
            android:max="20"
            android:rotation="270"
            android:id="@+id/throttleSeekBar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="251dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="355dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="354dp"
            android:layout_marginRight="354dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"/>

</androidx.constraintlayout.widget.ConstraintLayout>